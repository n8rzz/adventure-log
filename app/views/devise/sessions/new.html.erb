<div class="mt-10 lg:mt-30">
  <section class="contianer mx-auto px-6">
    <div class="w-full lg:flex items-center">
      <div class="w-full lg:w-1/2">
        <h2 class="text-md lg:text-2xl text-gray-600">Cheeky sub-title above the title</h2>
        <h1 class="text-5xl lg:text-6xl font-bold text-teal-600 mb-2 lg:mb-6">Awesome Title!</h1>
        <p class="text-md lg:text-xl font-light text-gray-800 mb-8">Short amount of copy to support the Awesome Title! Becuase the title and sub-title together are both awesome, we want to be sure to make sure that you know so.</p>
      </div>
      <div class="w-full lg:w-1/2 lg:pl-24">
        <div class="bg-gray-100 shadow-sm rounded-md p-8">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mb-6">
              <%= f.label :email, class: 'mb-2 block text-gray-700' %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: 'bg-white rounded-md border border-gray-200 p-3 focus:outline-none w-full' %>
            </div>

            <div class="mb-6">
              <%= f.label :password, class: 'mb-2 block text-gray-700' %>
              <%= f.password_field :password, autocomplete: "current-password", class: 'bg-white rounded-md border border-gray-200 p-3 focus:outline-none w-full' %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="mb-6">
                <%= f.check_box :remember_me, class: 'form-check-input appearance-none h-4 w-4 border border-gray-300 rounded-sm bg-white checked:bg-blue-600 checked:border-blue-600 focus:outline-none transition duration-200 mt-1 align-top bg-no-repeat bg-center bg-contain float-left mr-2 cursor-pointer' %>
                <%= f.label :remember_me, class: 'form-check-label inline-block text-gray-800 hover:cursor-pointer' %>
              </div>
            <% end %>

            <div class="mb-8">
              <%= f.submit "Login", class: 'py-3 px-12 bg-teal-500 hover:bg-green-600 mr-5 hover:cursor-pointer rounded-md text-white text-lg focus:outline-none w-full' %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </section>
</div>
